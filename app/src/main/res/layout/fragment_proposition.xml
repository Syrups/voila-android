<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tenveux.theglenn.tenveux.fragment.PropositionFragment">


    <ImageView
        android:id="@android:id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_proposition" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginBottom="30dp">


        <TextView
            android:id="@android:id/text1"
            fontPath="fonts/JosefinSansStd-Light.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatar"
            android:background="@color/tenveux_text_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="LÃ©onard : t'en veux ?"
            android:textColor="@android:color/white"
            android:textSize="15sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-7dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/glenn"
            app:border_color="@android:color/white"
            app:border_width="1dp"/>

        <ImageButton
            android:id="@+id/button_not_take"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@+id/button_take"
            android:layout_toStartOf="@+id/button_take"
            android:background="@drawable/btn_not_take"
            android:src="@drawable/ic_x_picture" />

        <Button
            android:id="@+id/button_take"
            style="@style/ButtonBigStyle"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal|bottom"
            android:text="J'en Prends !"
             />
    </RelativeLayout>
</FrameLayout>

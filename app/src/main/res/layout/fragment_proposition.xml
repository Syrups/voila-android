<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tenveux.theglenn.tenveux.fragment.PropositionFragment">


    <ImageView
        android:id="@android:id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_proposition" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">


        <View
            android:id="@+id/layout_status_fading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/translucent_black" />

        <TextView
            android:id="@android:id/text1"
            fontPath="fonts/JosefinSansStd-Light.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tenveux_text_bg"
            android:gravity="center"
            android:paddingTop="110dp"
            android:text="LÃ©onard : t'en veux ?"
            android:textColor="@android:color/white"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/text_status_fading"
            fontPath="fonts/SansitaOne.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="j'en prends !"
            android:textColor="@color/cyan"
            android:textSize="40sp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-7dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/glenn"
            app:border_color="@android:color/white"
            app:border_width="1dp" />


        <com.tenveux.theglenn.tenveux.widget.VoilaSeekBar
            android:id="@+id/seekBar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@null"
            android:progressDrawable="@android:color/transparent" />
    </RelativeLayout>
</FrameLayout>

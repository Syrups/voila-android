<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@android:id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/dummy_proposition" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|top"
        android:background="#E40e0c08"
        android:paddingBottom="30dp">


        <TextView
            android:id="@android:id/text1"
            fontPath="fonts/JosefinSansStd-Light.otf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/avatar"
            android:gravity="center"
            android:padding="10dp"
            android:text="LÃ©onard : t'en veux ?"
            android:textColor="@android:color/white"
            android:textSize="15sp" />


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-7dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/glenn"
            app:border_color="@android:color/white"
            app:border_width="1dp" />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="-50dp"
            android:src="@drawable/ic_took_logo" />

        <TextView
            android:id="@+id/textView"
            fontPath="fonts/SansitaOne.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="j'en prends !"
            android:textColor="@color/cyan"
            android:textSize="40sp" />

        <Button
            android:id="@+id/button_resend"
            fontPath="fonts/JosefinSansStd-Light.otf"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/dummy"
            android:background="@drawable/btn_rounded_border_white"
            android:minWidth="150dp"
            android:text="ok !"
            android:textColor="@android:color/white" />

        <!-- Empty layout (0x0 dp) centered horizontally -->
        <Space
            android:id="@+id/dummy"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="7dp"
            android:visibility="invisible" />

        <Button
            android:id="@+id/button_ok"
            fontPath="fonts/JosefinSansStd-Light.otf"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/dummy"
            android:layout_toRightOf="@+id/dummy"
            android:background="@drawable/btn_rounded_border_cyan"
            android:minWidth="150dp"
            android:text="reproposer"
            android:textColor="@android:color/white" />
    </RelativeLayout>
</FrameLayout>
